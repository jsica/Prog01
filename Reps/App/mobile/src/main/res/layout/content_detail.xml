<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jessica.congressional.detail"
    tools:showIn="@layout/activity_detail"
    android:background="@drawable/repbg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailface"
        android:background="@drawable/lynn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lynn Jenkins"
        android:id="@+id/repname"
        android:textSize="30sp"
        android:layout_below="@+id/detailface"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="House of Representatives"
        android:id="@+id/branch"
        android:layout_below="@+id/repname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Republican"
        android:id="@+id/partaff"
        android:layout_below="@+id/branch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textColor="#da7474"
        android:textIsSelectable="false"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="January 01, 1990 - present"
        android:id="@+id/termS"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/partaff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Term Served"
        android:id="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/partaff"
        android:layout_alignEnd="@+id/partaff" />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/rightb"
        android:background="@drawable/whiteright"

        android:layout_below="@+id/partaff"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/leftb"
        android:background="@drawable/whiteleft"

        android:layout_below="@+id/partaff"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Committees"
        android:id="@+id/commt"
        android:layout_alignTop="@+id/partaff"
        android:layout_alignStart="@+id/partaff"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blah blah"
        android:id="@+id/comms"
        android:layout_below="@+id/commt"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bills"
        android:id="@+id/billText"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blah blahblbh"
        android:id="@+id/bills"
        android:visibility="invisible"
        android:layout_alignTop="@+id/termS"
        android:layout_alignStart="@+id/partaff" />


</RelativeLayout>
