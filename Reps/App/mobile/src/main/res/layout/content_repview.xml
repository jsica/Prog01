<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jessica.congressional.repview"
    tools:showIn="@layout/activity_repview"
    android:background="@drawable/congpage">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/pat1"
            android:background="@drawable/pat2"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/lynn1"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="18dp"
            android:layout_height="29dp"
            android:id="@+id/leftc"
            android:layout_gravity="bottom"
            android:background="@drawable/conglr"
            android:layout_alignBottom="@+id/rightc"
            android:layout_alignStart="@+id/party1" />



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/lynn1"
            android:background="@drawable/lynn"
            android:layout_gravity="bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/rightc"
            android:layout_gravity="bottom"
            android:background="@drawable/congbut"
            android:layout_below="@+id/lynn1"
            android:layout_toEndOf="@+id/lynn1" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/joe1"
            android:background="@drawable/moran"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/lynn1"
            android:layout_toStartOf="@+id/branch1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lynn Jenkins"
        android:id="@+id/name1"
        android:textColor="#7c7c7c"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/leftc"
        android:layout_toEndOf="@+id/joe1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="House of Representatives"
        android:id="@+id/branch1"
        android:layout_below="@+id/name1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Democrat"
        android:id="@+id/party1"
        android:layout_below="@+id/branch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textSize="30sp"
        android:textColor="#477caa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Link to Website"
        android:id="@+id/textView4"
        android:layout_below="@+id/party1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/textView3"
        android:layout_below="@+id/party1"
        android:layout_alignEnd="@+id/branch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="lynnjenkins.house.gov"
        android:id="@+id/weblink"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="lynnjenkins@us.gov"
        android:id="@+id/email"
        android:layout_alignBottom="@+id/weblink"
        android:layout_toStartOf="@+id/rightb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Kansas"
        android:id="@+id/place"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView3"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/place"
        android:layout_alignStart="@+id/branch1"
        android:layout_toStartOf="@+id/pat1"
        android:visibility="invisible" />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/rightb"
        android:background="@drawable/whiteright"
        android:layout_alignTop="@+id/party1"
        android:layout_alignEnd="@+id/pat1" />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/leftb"
        android:background="@drawable/whiteleft"
        android:layout_toEndOf="@+id/joe1"
        android:layout_alignTop="@+id/party1"
        android:layout_alignStart="@+id/joe1"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Latest Tweet"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/party1"
        android:layout_toStartOf="@+id/rightc"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Definitely just went to a thing today&quot;"
        android:id="@+id/tweet"
        android:visibility="invisible"
        android:layout_below="@+id/party1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="More Info"
        android:id="@+id/info"
        android:visibility="invisible"
        android:layout_alignTop="@+id/weblink"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

